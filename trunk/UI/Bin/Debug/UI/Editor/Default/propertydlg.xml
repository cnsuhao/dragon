<?xml version="1.0" encoding="utf-8" ?>

<skin>
  <layout>
    <Window id="PropertyDialog" minwidth="200" minheight="300" bkgnd.render.type="color" bkgnd.render.color="dlg_bkg">
      <Panel layout="stack" layout.left="0" layout.top="2" layout.right="0" height="25">
        <RadioButton id="radiobtn_attr_xml" text="xml属性" tooltip="直接显示xml属性"  width="70" height="0"
                     styleclass="property_dlg_toolbar_btn"/>
        <RadioButton id="radiobtn_attr_obj" text="obj属性" tooltip="显示对象所有属性" width="70" height="0"
                     styleclass="property_dlg_toolbar_btn"/>
        <RadioButton id="radiobtn_attr_style" text="style属性" tooltip="样式属性" width="70" height="0"
                     styleclass="property_dlg_toolbar_btn"/>
      </Panel>
      <PropertyCtrl id="propertyctrl" layout.left="0" layout.top="30" layout.right="0" layout.bottom="100"/>
      <RichEdit id="property_desc" layout.left="1" layout.bottom="30" layout.right="1" height="68" padding="3"
                bkgnd.render.type="color" bkgnd.render.color="dlg_bkg" bkgnd.render.border="1" bkgnd.render.border.color="dlg_border"/>

      <Label text="Command:" layout.left="0" width="60" height="25" layout.bottom="0"/>
      <Edit id="edit_command" layout.left="60" layout.bottom="0" layout.right="30" height="25" bkgnd.render.theme.disable="1"/>
      <Button id="btn_command" layout.right="5" layout.bottom="5" width="20" height="20" bkgnd.render.theme.disable="1"/>
    </Window>
  </layout>
</skin>