<?xml version="1.0" encoding="utf-8"?>
<skin>
	<layout>
		<Window id="PropertyDialog" minwidth="200" minheight="300" bkgnd.render.type="color" bkgnd.render.color="dlg_bkg">
			<Panel layout="stack" layout.left="0" layout.top="2" layout.right="0" height="25">
				<RadioButton id="radiobtn_attr1" text="obj属性" tooltip="显示对象所有属性" width="70" height="0" styleclass="property_dlg_toolbar_btn" />
				<RadioButton id="radiobtn_attr2" width="70" height="0" styleclass="property_dlg_toolbar_btn" />
				<RadioButton id="radiobtn_attr3" text="style属性" tooltip="样式属性" width="70" height="0" styleclass="property_dlg_toolbar_btn" />
			</Panel>
			<PropertyCtrl id="propertyctrl" transparent="1" layout.left="0" layout.top="30" layout.right="0" layout.bottom="75" expandicon.render.type="theme.treeview.expandcollpase.icon">
				<InstantEdit id="__edit" styleclass="child_edit" visible="collapsed" bkgnd.render.color="dlg_bkg" textrender.colorlist.count="2" textrender.color="0xFF000000;0xFFFFFFFF" textrender.font="default" caretheight="-1" />
				<Button id="__button" />
				<ComboBox id="__combobox" styleclass="child_combobox" visible="collapsed" bkgnd.render.color="dlg_bkg" textrender.font="default" dropwnd.id="DefaultComboBoxDropWnd">
					<Edit id="__combo_edit" transparent="1" bkgnd.render.type="color" bkgnd.render.color="dlg_bkg" caretheight="18" />
					<Button id="__combo_button" transparent="1" bkgnd.render.type="theme.combobox.btn" tabstop="0" autosize="bkimage" />
				</ComboBox>
				<SystemVScrollBar id="__vscrollbar" width="18" bkgnd.render.type="theme.vscrollbar.bkg">
					<Button id="__scrollbar_up" bkgnd.render.type="theme.vscrollbar.up" height="18" />
					<Button id="__scrollbar_thumb" bkgnd.render.type="theme.vscrollbar.thumb" />
					<Button id="__scrollbar_down" bkgnd.render.type="theme.vscrollbar.down" height="18" />
				</SystemVScrollBar>
			</PropertyCtrl>
			<RichEdit id="property_desc" padding="3,3,3,3" bkgnd.render.type="color" height="68" layout.left="1" layout.right="1" layout.bottom="2" bkgnd.render.color="dlg_bkg" bkgnd.render.border.color="dlg_border" bkgnd.render.border="1,1,1,1" vscrollbar="auto" />
			<Label visible="collapsed" width="60" height="25" layout.left="0" layout.bottom="0" textrender.type="simple" textrender.font="default" text="Command:" />
			<Edit id="edit_command" visible="collapsed" height="25" layout.left="60" layout.right="30" layout.bottom="0" caretheight="14" />
			<Button id="btn_command" layout.right="5" layout.bottom="5" width="20" height="20" bkgnd.render.theme.disable="1" />
		</Window>
	</layout>
</skin>
